<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Status"
    android:id="@+id/statusid"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="center"
       android:gravity="center">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginRight="30dp"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="30dp"
           >

           <Button
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:text="DC Units"
               android:id="@+id/dcunits"
               android:textColor="#fff"
               android:textSize="18dp"
               android:textStyle="bold"
               android:background="@drawable/btn_back"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginRight="30dp"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="30dp"
           >

           <Button
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:text="Input Units"
               android:id="@+id/inputunits"
               android:textColor="#fff"
               android:textSize="18dp"
               android:textStyle="bold"
               android:background="@drawable/btn_back"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginRight="30dp"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="30dp"
           >

           <Button
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:text="Operate Units"
               android:id="@+id/operateunits"
               android:textColor="#fff"
               android:textSize="18dp"
               android:textStyle="bold"
               android:background="@drawable/btn_back"
               />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:layout_marginRight="30dp"
           android:layout_marginLeft="30dp"
           android:layout_marginTop="30dp"
           >

           <Button
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:text="Power Units"
               android:id="@+id/powerunits"
               android:textColor="#fff"
               android:textSize="18dp"
               android:textStyle="bold"
               android:background="@drawable/btn_back"
               />
       </LinearLayout>


   </LinearLayout>
</LinearLayout>